{
    "extends": ["strongloop", "eslint:recommended", "prettier"],
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "prettier/prettier": "error",
        "max-len": ["error", {"code": 80}],
        "indent": ["error", 2, {"SwitchCase": 1}],
        "quotes": [
            "error",
            "single"
        ]
    }
}
